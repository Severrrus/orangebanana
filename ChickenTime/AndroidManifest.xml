<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chickentime"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".KillChickenActivity"
            android:label="@string/title_activity_kill_chicken" >
        </activity>
        <activity
            android:name=".ListViewChickens"
            android:label="@string/title_list_view_chickens" >
        </activity>
        <activity
            android:name=".ChickenView"
            android:label="@string/title_activity_chicken_view" >
        </activity>
    </application>

</manifest>